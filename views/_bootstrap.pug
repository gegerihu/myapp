													.col-md-9
														input.form-control(type='text', name='user[name]', placeholder='姓名' required)
												.form-group
													label.col-md-3.control-label(for='email') 邮箱
													.col-md-9
														input.form-control(type='email', name='user[email]', placeholder='邮箱地址' required)
													.col-md-9.col-md-offset-3
														h5#email.alert-danger.wrong-info.hide
															span.glyphicon.glyphicon-remove
															|错误信息
												.form-group
													label.col-md-3.control-label(for='calss') 年级专业
													.col-md-9
														input.form-control(type='text', name='user[class]', placeholder='年级专业' required)
												.form-group
													label.col-md-3.control-label(for='studentId') 学号
													.col-md-9
														input.form-control(type='text', name='user[studentId]', placeholder='学号' required)
												.form-group.hide
													label.col-md-3.control-label(for='status') 身份
													.col-md-9
														input.form-control(type='text', name='user[status]', placeholder='学号' required value = 0)
												.form-group
													label.col-md-3.control-label(for='phone') 电话号码
													.col-md-9
														input.form-control(type='text', name='user[phoneNum]', placeholder='电话号码' required)
													.col-md-9.col-md-offset-3
														h5#phone.alert-danger.wrong-info.hide
															span.glyphicon.glyphicon-remove
															|错误信息
												.form-group
													// Button
													.col-md-offset-3.col-md-9
														button#btn-signup.btn.btn-info(type='submit') 提交
									#profile.tab-pane(role='tabpanel')
