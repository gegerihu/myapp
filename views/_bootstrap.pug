			#login-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true', style='display: none;')
				.container
					#loginbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2(style='margin-top:100px;')
						.panel.panel-info
							.panel-heading
								.panel-title 登录
								div(style='float:right; font-size: 100%; position: relative; top:-20px')
									span.glyphicon.glyphicon-remove(role='button' data-dismiss='modal')
							.panel-body(style='padding-top:30px')
								form#loginform.form-horizontal(method='post' action='/login')
									#login-notice.alert.alert-danger.hide
										| 错误提示！
									.input-group(style='margin-bottom: 25px')
										span.input-group-addon
											i.glyphicon.glyphicon-user
										input#login-username.form-control(type='text', name='user[userName]', value='', placeholder='用户名')
									.input-group(style='margin-bottom: 15px')
										span.input-group-addon
											i.glyphicon.glyphicon-lock
										input#login-password.form-control(type='password', name='user[password]', placeholder='密码')
									//- .input-group
									//- 	.checkbox
									//- 		label
									//- 			input#login-remember(type='checkbox', name='user[remember]', value='1')
									//- 			|  记住我
									.form-group(style='margin-top:10px')
										// Button
										.col-sm-4.col-sm-offset-2.controls
											button#btn-login.btn.btn-info(type='submit') 登录
										.col-sm-4.controls
											a(href='/user/forgot') 忘记密码
									.form-group
										.col-md-12.control
											div(style='border-top: 1px solid#888; padding-top:15px; font-size:85%')
												| 还没有账户!
												a#switch(role='button')
													|     点击注册
			#signup-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true', style='display: none;')
				.container
					#signupbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2(style='margin-top: 250px;')
						.panel.panel-info
							.panel-heading
								.panel-title 注册
								div(style='float:right; font-size: 100%; position: relative; top:-20px')
									span.glyphicon.glyphicon-remove(role='button' data-dismiss='modal')
							.panel-body
								// Nav tabs
								ul.nav.nav-tabs(role='tablist')
									li.active(role='presentation')
										a(href='#home', aria-controls='home', role='tab', data-toggle='tab') 学生用户
									li(role='presentation')
										a(href='#profile', aria-controls='profile', role='tab', data-toggle='tab') 教师用户

								// Tab panes
								.tab-content
									#home.tab-pane.active(role='tabpanel')
										form#student-signupform.form-horizontal(method='post' action='/signup')
											#student-signup-notice.alert.hide
												| 提示信息
											#student-signupform-main
												.form-group
													label.col-md-3.control-label(for='username') 用户名
													.col-md-9
														input.form-control(type='text', name='user[userName]', placeholder='用户名' required)
													.col-md-9.col-md-offset-3
														h5#userName.alert-danger.wrong-info.hide
															span.glyphicon.glyphicon-remove
															|错误信息
												.form-group
													label.col-md-3.control-label(for='password') 密码
													.col-md-9
														input.form-control(type='password', name='user[password]', placeholder='密码' required)
													.col-md-9.col-md-offset-3
														h5#password.alert-danger.wrong-info.hide
															span.glyphicon.glyphicon-remove
															|错误信息
