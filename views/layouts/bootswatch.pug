extends ../_bootstrap
block body
	// Fixed navbar
	.container
		#myslider.carousel.slide(data-ride='carousel')
			ol.carousel-indicators
				li.active(data-target='#myslider',data-slide-to='0')
				li(data-target='#myslider',data-slide-to='1')
				li(data-target='#myslider',data-slide-to='2')
			.carousel-inner(role='listbox')
				.item.active
					img(src='/images/banner1.jpg',alt='')
					.carousel-caption
						|....
				.item
					img(src='/images/banner2.jpg',alt='')
					.carousel-caption
						|....
				.item
					img(src='/images/banner3.jpg',alt='')
					.carousel-caption
						|....

			a.carousel-control.left(href='/#myslider',role='button', data-slide='prev')
				span.glyphicon.glyphicon-chevron-left(aria-hidden='ture')
				span.sr-only Previous
			a.carousel-control.right(href='/#myslider',role='button', data-slide='next')
				span.glyphicon.glyphicon-chevron-right(aria-hidden='ture')
				span.sr-only Next
	.container
		.content
			.row
				.col-md-12
					h3.title-bg-line-bl
						span 新闻动态
					.post-list
						each item in documentList
							.col-md-6
								article.post(style='padding-bottom:10px')
									.row
										.col-xs-3.col-md-3
											img(src='/images/1.jpg', alt=item.title)
										.col-xs-9.col-md-9
											h4.post-title
												a(href='/news/'+item._id, target='_blank') #{item.title}
											ul.post-meta
												li 
													span.glyphicon.glyphicon-time(aria-hidden='true') 
													|#{myDateFormat(item.meta.updateDate)}
												li 
													span.glyphicon.glyphicon-user(aria-hidden='true') 
													|由#{item.author}发布
												li 
													span.glyphicon.glyphicon-eye-open(aria-hidden='true') 
													|#{item.clickNum}次阅览


							
